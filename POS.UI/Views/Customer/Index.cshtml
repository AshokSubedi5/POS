    <script type="text/javascript">
        $(document).ready(function () {
            $("#grid").kendoGrid({
                height: CalcGridHeight(),
                dataSource: {
                    pageSize: 100,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true,
                    transport: {
                        read: {
                            url: "/Customer/Index",
                            dataType: "json",
