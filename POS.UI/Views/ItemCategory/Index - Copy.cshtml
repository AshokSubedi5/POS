@model IEnumerable<POS.DTO.ItemCategory>

@{
    ViewData["Title"] = "Category";
}

<div class="page-wrapper">
    <div class="page-header">
        <div class="page-header-title">
            <h4>@ViewData["Title"]</h4>
            <span>List of item @ViewData["Title"]</span>
        </div>
        <div class="page-header-breadcrumb">
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#!">Setup</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#!">@ViewData["Title"]</a>
                </li>

            </ul>
        </div>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-block">
                        @*Your content here*@

                        <table id="grid" class="table">
                            <thead>
                                <tr>
                                    <th data-filterable="false" data-sortable="false">
                                        @Html.DisplayNameFor(model => model.Code)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ModifiedDate)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @item.ModifiedDate.ToString("dd MMM, yyyy")
                                        </td>
                                        @*<td>
                                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".table").kendoGrid({
                height: 500,
                //sortable: true,
                pageable: {
                    messages: {
                        empty: "No items to display"
                    },
                    refresh: true,
                    pageSizes: [5, 10, 25, 50, 100],
                    buttonCount: 5
                },
                filterable: true,
                sortable: true,

            });
            $(".k-grid-content").css("overflow-y", "hidden").mCustomScrollbar();
            $("#grid").data("kendoGrid").dataSource.pageSize(10);
            PageSlimScroll();
        });
    </script>
}










