@model IEnumerable<POS.DTO.UserViewModel> 
@{
    ViewData["Title"] = "Users";
    var count = 1;
}

<h2>Users</h2>
@Html.Partial("_ResponseMessagePartial")
<p>
    <a asp-action="UserCreate">Create New</a>
</p>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover table-condensed" id="example1">
            <thead>
                <tr>
                    <th>#</th>                   
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>

                </tr>
            </thead>
            @foreach (var user in Model)
            {
            <tr>
                <td>@count</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="UserEdit" asp-route-id="@user.Id">Edit</a>
                    <a asp-action="UserDelete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
                count++;
            }
        </table>
    </div>
</div>

