@model IEnumerable<POS.DTO.SalesInvoice>

@{
    ViewData["Title"] = "Sales Invoice Reports";
}

<h2>Tax Invoice Reports</h2>

<table id="SalesInvoiceTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Number)
            </th>
            <th class="sorting_desc">
                @Html.DisplayNameFor(model => model.Trans_Date_Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trans_Date_Bs)
            </th>
            <th>
                @Html.DisplayName("Gross Amount")
            </th>
            <th>
                @Html.DisplayName("Discount")
            </th>
            <th>
                @Html.DisplayName("Vat")
            </th>
            <th>
                @Html.DisplayName("Net Amount")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Invoice_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trans_Date_Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trans_Date_Bs)
                </td>
                <td class="gross-amount text-right pr-5">
                    @Html.DisplayFor(modelItem => item.Total_Gross_Amount)
                </td>
                <td class="discount text-right pr-5">
                    @Html.DisplayFor(modelItem => item.Total_Discount)
                </td>
                <td class="vat text-right pr-5">
                    @Html.DisplayFor(modelItem => item.Total_Vat)
                </td>
                <td class="net-amount text-right pr-5">
                    @Html.DisplayFor(modelItem => item.Total_Net_Amount)
                </td>
            </tr>}
    </tbody>
    <tfoot align="right">
        <tr>
            <th colspan="3" class="pr-5"></th>
            <th class="pr-5"></th>
            <th class="pr-5"></th>
            <th class="pr-5"></th>
            <th class="pr-5"></th>
        </tr>
    </tfoot>
</table>

@section Scripts {
    <script>
        var table = document.getElementById("SalesInvoiceTable").getElementsByTagName('tbody')[0];
        $.each(table.rows, function (i, v) {
            $(this).find(".gross-amount").text(CurrencyFormat($(this).find(".gross-amount").text()));
            $(this).find(".discount").text(CurrencyFormat($(this).find(".discount").text()));
            $(this).find(".vat").text(CurrencyFormat($(this).find(".vat").text()));
            $(this).find(".net-amount").text(CurrencyFormat($(this).find(".net-amount").text()));
        });


        $("#SalesInvoiceTable").DataTable({
            paging: false,
            searching: false,
            order: [1, "desc"],
            "footerCallback": function (row, data, start, end, display) {
                var api = this.api(), data;

                // Remove the formatting to get integer data for summation
                var intVal = function (i) {
                    return typeof i === 'string' ?
                        i.replace(/[\$,]/g, '') * 1 :
                        typeof i === 'number' ?
                            i : 0;
                };

                grossAmountTotal = api
                    .column(3)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                discounntTotal = api
                    .column(4)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);
                taxTotal = api
                    .column(5)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);
                netAmountTotal = api
                    .column(6)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                $(api.column(0).footer()).html('Total');
                $(api.column(3).footer()).html(CurrencyFormat(grossAmountTotal));
                $(api.column(4).footer()).html(CurrencyFormat(discounntTotal));
                $(api.column(5).footer()).html(CurrencyFormat(taxTotal));
                $(api.column(6).footer()).html(CurrencyFormat(netAmountTotal));
            }
        });
    </script>
}

